/* pages/main/main.wxss */
@import "../../../icon/css/font-awesome.min.wxss";

.totalcontainer {
  height: 100%;
  width: 100%;
}

.container {
  margin-top: 40rpx;
  height: 100%;
  width: 100%;
  justify-content: center;
  padding: 0;
  align-items: center;
  display: block;
}

.table_container {
  margin-bottom: 200rpx;
}


.title{
  width: 100%;
  display:flex;
  align-items:center;
  justify-content:center;
  font-size: 42rpx;
  font-weight: 900;
}

.tabs{
  height: 100%;
}

.row1 {
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: center;
  flex-direction:row;
}
.tool {
  font-size: 50rpx;
  margin: 15%;
}

.tt{
  padding: 5%;
  align-items:center;
  justify-content:center;
}

.content{
  line-height: 50rpx;
  width:100%;
  font-size: small;
}

/* pages/scoreTool/scoreTool.wxss */

.auto{
  color: white;
  margin-left: 15%;
  margin-right: 15%;
}

.col {
  font-size:40rpx;
  font-stretch: wider;
  width: 100%;
  height: 100%;

  display:flex;
  align-items: center;
  justify-content:center;
}

.cols {
  font-size:40rpx;
  font-stretch: wider;
  width: 40%;
  height: 100%;
  margin:40rpx;
  display:flex;
  align-items: center;
  justify-content:center;
}

button {
  background-color: rgb(245, 245, 245);
  font-weight: bold;
  color: black;
}

/* pages/leaderboard/leaderboard.wxss */

/* 表头 */
.table_header{
  display: flex;
  justify-content: space-between; /* 项目位于各行之间留有空白的容器内。 */
  background-color: #d02222;
  width: 100%;
  font-size: 35rpx;
  color: #330e0e;
  text-align: center;
  font-weight: 900;
} 
.th{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  color: #ffffff;
  border-bottom: 1px solid #000;
  border-right: 1px solid #000;
}
.th1,.th2{
  width: 50%
}

/* 表格cell */
.table_cell{
  display: flex;
  justify-content: space-between; /* 项目位于各行之间留有空白的容器内。 */
  width: 100%;
  font-size: 35rpx;
  color: #000000;
  text-align: center;
  margin-top: 10rpx;
}
.td{
  display: flex;
  
  height: auto;
  
} 
.td1{
  align-items: left;
  justify-content: left;
  width: 50%
} 

.td2{
  align-items: center;
  justify-content: center;
  width: 50%
}

.header_view_hide{
  display: none;
}

.header_view_show{
  border:1px solid #000;
  border-right:0;
  border-bottom: 0;
  width: 98%;
  margin-left: 1%;
  display: block;
}

.userinfo-avatar { 
  overflow: hidd; 
  display: block; 
  width: 160rpx; 
  height: 160rpx; 
  margin: 20rpx; 
  margin-top: 50rpx; 
  border-radius: 50%; 
  border: 2px solid #fff; 
  box-shadow: 3px 3px 10px 
  rgba(0, 0, 0, 0.2); 
}
  

.first-child{
  display:flex;
  align-items:center;
  justify-content:center;
  flex-direction:column;

}

.sec-child{
  float: left;
  display:flex;
  align-items:center;
  justify-content:center;
  flex-direction:column;
  margin-left: 35rpx;
}

.third-child{
  float: right;
  display:flex;
  align-items:center;
  justify-content:center;
  flex-direction:column;
  margin-right: 35rpx;
}

.rank{
  width: 20rpx;
}