.rows{
  display: flex;
}

.row_1 {
  display: flex;
  height: 10%;
  width: 100%;
}

.row_0{
  display: flex;
  height: 5%;
  width: 100%;
}

.row_2 {
  width: 100%;
  display: flex;
  margin-top: 30rpx;
  text-align: center;
  vertical-align: middle;
  justify-content: center;
}

.auto{
  color: white;
  margin-left: 15%;
  margin-right: 15%;
}

.col {
  font-size:40rpx;
  font-stretch: wider;
  width: 100%;
  height: 100%;

  display:flex;
  align-items: center;
  justify-content:center;
}

.cols {
  font-size:40rpx;
  font-stretch: wider;
  width: 40%;
  height: 100%;
  margin:40rpx;
  display:flex;
  align-items: center;
  justify-content:center;
}

button {
  background-color: rgb(245, 245, 245);
  font-weight: bold;
  color: black;
}

/* pages/leaderboard/leaderboard.wxss */

input{
  text-align: center;
  margin: 10rpx;

}

.title{
  width: 100%;
  text-align: center;
  font-size: 50rpx;
  font-weight: 900;
}

/* 表头 */
.table_header{
  display: flex;
  justify-content: space-between; /* 项目位于各行之间留有空白的容器内。 */
  background-color: #d02222;
  width: 100%;
  font-size: 35rpx;
  color: #330e0e;
  text-align: center;
  font-weight: 900;
} 
.th{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  color: #ffffff;
}
.th1,.th2{
  width: 50%
}

/* 表格cell */
.table_cell{
  display: flex;
  justify-content: space-between; /* 项目位于各行之间留有空白的容器内。 */
  width: 100%;
  font-size: 40rpx;
  color: #330e0e;
  text-align: center;
}
.td{
  display: flex;
  align-items: center;
  justify-content: center;
  height: auto;
  
} 
.td1,.td2{
  width: 50%
} 

.header_view_hide{
  display: none;
}

.header_view_show{
  border-right:0;
  border-bottom: 0;
  width: 98%;
  margin-left: 1%;
  display: block;
}