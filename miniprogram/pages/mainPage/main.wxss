/* pages/main/main.wxss */
@import "../../icon/css/font-awesome.min.wxss";

.totalcontainer {
  height: 100%;
  width: 100%;
}
.container {
  margin-top: 50rpx;
  height: 100%;
  width: 100%;
  /* position: absolute; */
  justify-content: center;
  padding: 0;
}
.tabs{
  height: 100%;
}
.row1 {
  margin-top: 50rpx;
  display: flex;
  width: 100%;
  height: 100%;
}
.tool {
  font-size: 50rpx;
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}


.content{
  width:90%;
  padding: 10rpx;
}

/* pages/scoreTool/scoreTool.wxss */
.row_1 {
  display: flex;
  height: 10%;
  width: 100%;
}

.row_0{
  display: flex;
  height: 5%;
  width: 100%;
}

.row_2 {
  width: 100%;
  display: flex;
  margin-top: 60rpx;
  height: 150rpx;
  text-align: center;
  vertical-align: middle;
}

.auto{
  color: white;
  margin: 5rpx;
}

.col {
  font-size:40rpx;
  font-stretch: wider;
  width: 100%;
  height: 100%;

  display:flex;
  align-items: center;
  justify-content:center;
}



.Score {
  font-size: 100rpx;
  color: white;
  
  width: 50%;
  height: 100%;
}

.title{
  font-stretch: wider;
  width: 100%;
  height: 100%;
  font-size: large;
  font-weight: bold;
  display:flex;
  justify-content:space-around;
}

.pdf{
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

